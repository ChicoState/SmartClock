<HomeScreen>:
    face: face
    ticks: ticks
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.75, "center_y":0.75}
        size: 0.4*min(root.size), 0.4*min(root.size)
        canvas:
            Color:
                rgb: 0.1, 0.1, 0.1
            Ellipse:
                size: self.size
                pos: self.pos
        ClockNumber:
            i: 1
        ClockNumber:
            i: 2
        ClockNumber:
            i: 3
        ClockNumber:
            i: 4
        ClockNumber:
            i: 5
        ClockNumber:
            i: 6
        ClockNumber:
            i: 7
        ClockNumber:
            i: 8
        ClockNumber:
            i: 9
        ClockNumber:
            i: 10
        ClockNumber:
            i: 11
        ClockNumber:
            i: 12
    Ticks:
        id: ticks
        r: min(root.size)*0.5/2
        pos_hint: {"center_x":0.75, "center_y":0.75}
    FireAlarm
    FireSleep
    Button:
        text: 'Alarms'
        height: 20
        size_hint: .2, .2
        pos_hint: {"x" : .1, 'y' : .7}
        on_press: root.manager.current = 'alarm'
    Button:
        text: 'Lights'
        size_hint: .2, .2
        pos_hint: {"x" : .1, "y" : .4 }
        on_press: root.manager.current = 'colorLights'
    Button:
        text: 'White Noise'
        size_hint: .2, .2
        pos_hint: {"x" : .1, "y" : .1 }
        on_press: root.manager.current = 'noise'
